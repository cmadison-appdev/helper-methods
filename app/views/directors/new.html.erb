<h1>New director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @director) do |form|%>
  
  <div>
    <%= form.label :name %>
    <%= form.text_field :name%> 
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, rows: 3 %>
  </div>

  <%= form.button %>

<% end %>
